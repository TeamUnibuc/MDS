{
  "testEnvironment": "node",

  "verbose": true,

  "transform": {
    "^.+\\.ts$": "ts-jest"
  },

  "modulePathIgnorePatterns": ["./dist/", "./tests/setup.ts"],

  "setupFilesAfterEnv": ["./tests/setup.ts"],

  "moduleFileExtensions": [
    "ts",
    "js",
    "json",
    "node"
  ],

  "coverageDirectory": "coverage",
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!src/**/*.d.ts"
  ],

  "testRegex": "(/tests/.*|(\\.|/)(test|spec))\\.(ts|js)$"
}
